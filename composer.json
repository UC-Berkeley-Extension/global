{
  "name": "drupal/recommended-project",
  "description": "Drupal 9 project build for UC Berkeley Global website.",
  "type": "project",
  "support": {
    "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
    "chat": "https://www.drupal.org/node/314178"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "package",
      "package": {
        "name": "ckeditor/templates",
        "type": "drupal-library",
        "version": "4.11.1",
        "dist": {
          "type": "zip",
          "url": "https://download.ckeditor.com/templates/releases/templates_4.14.0.zip",
          "reference": "master"
        }
      }
    }
  ],
  "require": {
    "composer/installers": "^1.9",
    "cweagans/composer-patches": "^1.6",
    "drupal/admin_toolbar": "^2.3",
    "drupal/block_field": "^1.0@RC",
    "drupal/components": "2.0-beta3",
    "drupal/core": "9.0.6 as 8.9.0",
    "drupal/core-composer-scaffold": "^9",
    "drupal/core-project-message": "^9",
    "drupal/core-recommended": "^9",
    "drupal/default_content": "^2.0@alpha",
    "drupal/devel_kint_extras": "^1.0",
    "drupal/menu_block": "^1.6",
    "drupal/menu_item_extras": "^2.12",
    "drupal/paragraphs": "^1.12",
    "drupal/pathauto": "^1.8",
    "drupal/pdb": "^1.0@alpha",
    "drupal/term_condition": "1.x-dev",
    "drupal/twig_field_value": "^2.0",
    "drupal/twig_tweak": "^2.6",
    "drupal/viewsreference": "^2.0",
    "drush/drush": "^10.3",
    "zaporylie/composer-drupal-optimizations": "^1.1"
  },
  "require-dev": {
    "drupal/devel": "^4.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "platform": {
        "php": "7.3"
    },
    "sort-packages": true,
    "preferred-install": {
        "drupal/pdb": "source"
    }
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/sites/default/development.services.yml": false
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ]
    },
    "patches": {
      "drupal/core": {
        "Views twig template suggestions": "https://www.drupal.org/files/issues/2020-05-16/2118743-183-twig-debug-info.patch"
      },
      "drupal/pdb": {
        "Drupal 9 readiness (https://www.drupal.org/project/pdb/issues/3133320)": "https://www.drupal.org/files/issues/2020-09-25/drupal9-ready-3133320-6.patch",
        "Notice: Uninitialized string offset: 0 in pdb_ng2_component_info_alter() in pdb_ng2 sub-module (https://www.drupal.org/project/pdb/issues/3083540)": "https://www.drupal.org/files/issues/2019-09-25/3083540-uninitialized-string-offset-0-in-pdb_ng2_component_info_alter-3.patch"
      },
      "drupal/term_condition": {
        "Drupal 9 readiness (https://www.drupal.org/project/term_condition/issues/3133793)": "https://www.drupal.org/files/issues/2020-05-13/3133793-11.patch"
      },
      "drupal/menu_item_extras": {
        "Error when creating new menus (https://www.drupal.org/project/menu_item_extras/issues/3061342)": "https://www.drupal.org/files/issues/2020-04-22/3061342-07-not-found-plugin_0.patch"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
        "echo 'Installing npm packages...' && cd web/modules/contrib/pdb/modules/pdb_ng2 && npm install 2>/dev/null"
    ]
  }
}
