{%  macro menu_links(items, attributes, menu_level, classes, dropdown_classes) %}
	{% if items %}
		<ul{{ attributes.addClass(classes) }}>
			{% for item in items %}
				{% set item_classes = [
					item.is_expanded ? 'expanded',
					item.is_expanded and menu_level == 0 ? 'dropdown',
					item.in_active_trail ? 'active',
				]
				%}
				<li{{ item.attributes.addClass(item_classes) }}>
					<a href="{{ item.url }}" class="dropdown-toggle" data-toggle="dropdown">{{ item.title }} <span class="caret"></span></a>
					<div class="dropdown-menu dropdown-fullwidth">
						{{ item.content }}
					</div>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
{% endmacro %}

