<div id="page-wrapper" {% if modifier_class %}class="{{ modifier_class }}"{% endif %}>
  <div id="page">
    {% block page_header %}
      {% include "@organisms/header/header.twig" %}
    {% endblock %}

    {% block page_hero %}
      <!-- make hero-program version -->
      {% include "@molecules/hero/hero.twig" %}
    {% endblock %}

    <div id="main" data-ng-controller="ProgramController">
      <main id="main-content" class="main-content{% if not full_width %} container{% endif %}" role="main">
        <div class="content{% if not full_width %} container{% endif %}">

          {% block page_content %}
          <!-- Row with sidebar and intro text -->
          <div class="padding-row">
            <div class="grid-container-fluid grid-col-1-3">
              <div>
                <ul class="list-style-none">
                  <li>Program Description</li>
                  <li><a href="#">Talk to an Adviser</a></li>
                  <li><a href="#">Program Structure</a></li>
                  <li><a href="#">Curriculum</a></li>
                  <li><a href="#">Your Path to a Career</a></li>
                  <li><a href="#">International Enrollments</a></li>
                </ul>
              </div>
              <div>
                <p class="lead">Gain employable skills in Business Administration and Management while experiencing life as a Berkeley student! This one- or two- semester study-abroad certificate gives you the opportunity to put lessons to work through an internship and become eligible to apply for Optional Practical Training (OPT).</p>
                <p class="emphasis">The application deadline for the Fall 2021 semester is June 28, 2021.</p>
              </div>
            </div>
          </div>
          <!-- Adviser Row -->
          
          <!-- Your study options Row -->
          <div class="padding-row">
            <div class="grid-container grid-col-3">
              {% include "@molecules/program-options-card/program-options-card.twig" with {
                'program': {
                  'name': "Data Analytics Full-Time Certificate",
                  'body': "Learn to collect, process, analyze and interpret data in order to develop actionable business insights.",
                  'duration': "1 semester",
                  'cost': "$11,000 (USD)",
                  'prerequisite': "none",
                }
              } %}
              {% include "@molecules/program-options-card/program-options-card.twig" with {
                'program': {
                  'name': "Data Science Full-Time Certificate",
                  'body': "Build upon the Data Analytics Certification. Learn advanced data wrangling, statistical modeling and machine learning on complex data sets.",
                  'duration': "1 semester",
                  'cost': "$11,000 (USD)",
                  'prerequisite': "Data Analytics Full-Time Certificate",
                  },
                  'borderClass': "blue",
              } %}
              {% include "@molecules/program-options-card/program-options-card.twig" with {
                'program': {
                  'name': "Data Science Full-Time Professional Program",
                  'body': "Complete the coursework in the Data Analytics and Data Science certificates, and take 4 additional semester units to complete this program.",
                  'duration': "2 semesters",
                  'cost': "$21,000 (USD)",
                  },
                  'borderClass': "yellow-blue",
              } %}
            </div>
          </div>
          <!-- Internship info row -->

          <!-- Curriculum tabs row -->

          <!-- Welcome to SF row -->

          <!-- Your path -->

          <!-- International Row -->

          {% endblock %}

        </div>
      </main>
    </div>
    {% block page_footer %}
      {% include "@organisms/footer/footer.twig" %}
    {% endblock %}
  </div>
</div>